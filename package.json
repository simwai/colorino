{
  "name": "colorino",
  "version": "0.3.1",
  "description": "A super simple colorized logger that gets the most out of your terminal",
  "type": "module",
  "license": "MIT",
  "author": "simwai",
  "keywords": [
    "color",
    "logger",
    "terminal",
    "ansi",
    "console"
  ],
  "homepage": "https://github.com/simwai/colorino",
  "repository": {
    "type": "git",
    "url": "https://github.com/simwai/colorino.git"
  },
  "bugs": {
    "url": "https://github.com/simwai/colorino/issues"
  },
  "main": "./dist/node.cjs",
  "module": "./dist/browser.mjs",
  "types": "./dist/browser.d.ts",
  "exports": {
    "node": {
      "types": "./dist/node.d.ts",
      "import": "./dist/node.mjs",
      "require": "./dist/node.cjs"
    },
    "browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.mjs",
      "require": "./dist/browser.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "package.json",
    "LICENSE.md"
  ],
  "scripts": {
    "build": "unbuild",
    "fix": "oxlint --fix && oxfmt",
    "test:all": "npm run test:node && npm run test:browser",
    "test:node": "vitest run --config vitest.config.ts",
    "test:browser": "vitest run --config vitest.browser.config.ts",
    "test:coverage": "vitest run --config vitest.config.ts --coverage",
    "test:ui": "vitest --ui --config vitest.config.ts",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "preversion": "npm run build && npm run test:all",
    "prepublishOnly": "npm run build && npm run test:all",
    "postversion": "npm publish --access public --ignore-scripts",
    "prepare": "husky"
  },
  "dependencies": {
    "neverthrow": "^8.2.0"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^8.1.0",
    "@types/node": "^24.9.2",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "husky": "^9.0.0",
    "jsdom": "^27.1.0",
    "lint-staged": "^15.2.0",
    "oxfmt": "^0.9.0",
    "oxlint": "^0.2.0",
    "tsx": "^4.20.6",
    "unbuild": "^3.6.1",
    "vitest": "^4.0.6"
  },
  "lint-staged": {
    "*.{ts,json,jsonc,md,yml,yaml}": [
      "oxlint --fix",
      "oxfmt"
    ],
    "*.ts": "vitest related --run"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}